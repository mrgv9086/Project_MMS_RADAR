generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  password     String
  refreshToken String?
  file         File[]
  storage      Storage[]

  @@map("user")
}

model Storage {
  id                         Int         @id @default(autoincrement())
  path                       String
  name                       String
  maxsize                    BigInt
  created_by                 Int
  type                       StorageType
  file_file_storageTostorage File[]      @relation("file_storageTostorage")
  user                       User        @relation(fields: [created_by], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("storage")
}

model File {
  id                            Int     @id @default(autoincrement())
  name                          String
  size                          BigInt
  created_by                    Int
  storage                       Int
  user                          User    @relation(fields: [created_by], references: [id], onDelete: NoAction, onUpdate: NoAction)
  storage_file_storageTostorage Storage @relation("file_storageTostorage", fields: [storage], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("file")
}

enum StorageType {
  private
  public

  @@map("storage_type")
}
